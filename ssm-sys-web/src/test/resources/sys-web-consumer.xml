<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
	    http://code.alibabatech.com/schema/dubbo
	    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 生成远程服务代理, 可以和本地bean一样使用userService -->
    <dubbo:reference id="userService" interface="com.ssm.sys.api.service.UserService" check="false"/>
    <dubbo:reference id="roleService" interface="com.ssm.sys.api.service.RoleService" check="false"/>
    <dubbo:reference id="permissionService" interface="com.ssm.sys.api.service.PermissionService" check="false"/>

</beans>
